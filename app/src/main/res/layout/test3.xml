<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix"
    android:weightSum="2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/gradient"
        >


        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="160dp"
            android:layout_height="203dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="123dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="128dp"
            android:layout_marginBottom="141dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            map:srcCompat="@mipmap/ic_launcher_round" />


        <TextView
            android:id="@+id/drivername"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="212dp"
            android:layout_marginBottom="69dp"
            android:layout_alignLeft="@+id/sourcePic"
            android:text="Jaffar Haider"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sourcePic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="365dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/carblue" />

        <TextView
            android:id="@+id/carname"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="63dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="15dp"
            android:text="Car Name and Model"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mapLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/sourcePic2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_source"
            />

        <TextView
            android:id="@+id/dpsource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sourcePic2"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="6dp"
            android:text="Source"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/destinationPic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_destination" />

        <TextView
            android:id="@+id/dpdestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dpsource"
            android:layout_alignLeft="@id/destinationPic"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@+id/destinationPic"
            android:text="Destination"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/datePic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_date" />

        <TextView
            android:id="@+id/dpDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dpdestination"
            android:layout_alignLeft="@id/datePic"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/datePic"
            android:text="Date"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/timePic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/ic_time" />

        <TextView
            android:id="@+id/dpTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dpDate"
            android:layout_alignLeft="@id/timePic"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/timePic"
            android:text="Time"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/seatsPic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/ic_people" />

        <TextView
            android:id="@+id/dpSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dpTime"
            android:layout_alignLeft="@id/seatsPic"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@+id/seatsPic"
            android:text="Seats"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/call"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="313dp"
            android:layout_marginBottom="14dp"
            android:clickable="true"
            android:src="@drawable/callicon" />

        <Button
            android:id="@+id/bookRide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="197dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/signinbtn"
            android:text="BOOK RIDE"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="25dp"
            android:text="RS. 220"
            android:textSize="45sp"
            android:textStyle="bold" />


    </RelativeLayout>
</LinearLayout>


