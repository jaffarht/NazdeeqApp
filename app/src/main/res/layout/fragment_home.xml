<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_page">

    <ImageView

        android:id="@+id/logo"
        android:layout_width="271dp"
        android:layout_height="298dp"
        android:layout_above="@+id/belowlayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="-344dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="-78dp"
        android:src="@drawable/logo" />



    <LinearLayout
        android:id="@+id/belowlayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:lines="2"
            android:maxLines="2"
            android:text="Hello there!&#x0A;Who are you this fine evening?"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/brown" />

        <Button
            android:id="@+id/driver_mode_button"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/signinbtn"
            android:drawableLeft="@drawable/ic_directions_car_white_24dp"
            android:elevation="10dp"
            android:text="I'm a Driver"
            android:textColor="@color/quantum_white_100" />

        <Button
            android:id="@+id/rider_mode_button"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/signupbtn"
            android:drawableLeft="@drawable/ic_person_pin_white_24dp"
            android:elevation="10dp"
            android:text="I'm a Passenger"
            android:textColor="@color/quantum_white_100" />

    </LinearLayout>
</RelativeLayout>